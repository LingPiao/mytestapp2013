<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dish_list_padding"
    android:paddingLeft="@dimen/dish_list_padding"
    android:paddingRight="@dimen/dish_list_padding"
    android:paddingTop="@dimen/dish_list_padding"
    tools:context=".DishList" >

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:paddingLeft="@dimen/dish_list_padding"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/img"
        android:layout_alignLeft="@+id/dishName"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dish_list_padding"
        android:singleLine="true"
        android:textSize="22sp"
        android:width="500dp" />

    <TextView
        android:id="@+id/dishName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/img"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img"
        android:paddingLeft="@dimen/dish_list_padding"
        android:textSize="26dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img"
        style="@style/DishImage"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@drawable/imgborder"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>